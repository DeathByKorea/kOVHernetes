{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "kube-proxy",
    "namespace": "kube-system"
  },
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "kube-proxy",
        "image": "__IMAGE__",
        "command": [
          "kube-proxy",
          "--cluster-cidr=172.17.0.0/16",
          "--kubeconfig=/kubeconfig"
        ],
        "securityContext": {
          "privileged": true
        },
        "ports": [
          {
            "containerPort": 10249,
            "name": "http"
          }
        ],
        "livenessProbe": {
          "httpGet": {
            "host": "127.0.0.1",
            "path": "/healthz",
            "port": "http"
          },
          "initialDelaySeconds": 15,
          "timeoutSeconds": 15
        },
        "volumeMounts": [
          {
            "mountPath": "/kubeconfig",
            "name": "kubeconfig",
            "readOnly": true
          },
          {
            "mountPath": "/tls",
            "name": "tls-certs",
            "readOnly": true
          }
        ]
      }
    ],
    "volumes": [
      {
        "hostPath": {
          "path": "/etc/kubernetes/kubeconfig-proxy"
        },
        "name": "kubeconfig"
      },
      {
        "hostPath": {
          "path": "/etc/kubernetes/tls"
        },
        "name": "tls-certs"
      }
    ]
  }
}
